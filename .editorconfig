EditorConfig is awesome: https://EditorConfig.org

Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

JavaScript and TypeScript files
[*.{js,ts}]
indent_style = space
indent_size = 2
quote_type = double
max_line_length = 120

# JSON files
[*.json]
indent_style = space
indent_size = 2
quote_type = double

# Markdown files
[*.md]
trim_trailing_whitespace = false
insert_final_newline = false

# CSS, SCSS and Less files
[*.{css,scss,less}]
indent_style = space
indent_size = 2

# HTML files
[*.html]
indent_style = space
indent_size = 2

# YAML files
[*.yaml]
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_style = space
indent_size = 4

# XML files
[*.xml]
indent_style = space
indent_size = 2
